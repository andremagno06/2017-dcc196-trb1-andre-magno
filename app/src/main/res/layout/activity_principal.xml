<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.desenvolvedor.myapplication.br.com.View.Principal"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/bltCadastroLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro Livro"
        android:layout_marginStart="21dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/blnCadastroReserva"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/blnCadastroReserva"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/blnCadastroReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Reserva"
        android:layout_marginStart="23dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="39dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnCadastroParticipante"
        app:layout_constraintTop_toTopOf="@+id/btnCadastroParticipante"
        android:layout_marginLeft="23dp" />

    <Button
        android:id="@+id/btnCadastroParticipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Participantes"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listaView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saida"
        app:layout_constraintBottom_toTopOf="@+id/txtSaida"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="@+id/bltCadastroLivro"
        android:layout_marginRight="31dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="Entrada"
        app:layout_constraintBottom_toTopOf="@+id/txtEntrada"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txtSaida"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:ems="10"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/bltCadastroLivro"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtEntrada"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintRight_toLeftOf="@+id/txtSaida"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="1dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSaida"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginLeft="1dp" />

</android.support.constraint.ConstraintLayout>
